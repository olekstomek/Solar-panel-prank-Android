<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/show_alert_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_show_again_this_warning"
        android:padding="1dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" />
    <CheckBox
        android:id="@+id/show_allow_brightness_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow_to_manage_screen_brightness"
        android:padding="1dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" />
    <CheckBox
        android:id="@+id/keep_screen_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keep_screen_on"
        android:padding="1dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" />
</LinearLayout>